<Window x:Class="CarApp.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить автомобиль" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Марка:"/>
            <TextBox x:Name="BrandTextBox"/>
            <TextBlock Text="Модель:"/>
            <TextBox x:Name="ModelTextBox"/>
            <TextBlock Text="Год выпуска:"/>
            <TextBox x:Name="YearTextBox"/>
            <TextBlock Text="Пробег:"/>
            <TextBox x:Name="MileageTextBox"/>
            <TextBlock Text="Цвет:"/>
            <TextBox x:Name="ColorTextBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Ок" Width="75" Click="OkButton_Click"/>
                <Button Content="Отмена" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>